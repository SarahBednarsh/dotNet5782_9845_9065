            <Label x:Name="IdOfParcelLabel" Content="Parcel ID:" HorizontalAlignment="Left" Grid.Column="3" VerticalAlignment="Top" Height="26" Grid.Row="3" Width="76" Margin="90,10,0,0"/>
            <TextBox IsReadOnly="True" x:Name="IdOfParcelBox" HorizontalAlignment="Left" Grid.Column="4" Grid.Row="3" Text="{Binding ParcelId, Mode=TwoWay}" TextWrapping="Wrap" Width="120" Margin="39,14,0,23"/>


        </Grid>-->

    </Grid>
</Window>
